<form action="/" method ="post" class="search">
  <%= token_tag %>
  <input type="text" class="search_field" name="search">
  <br>
  <select name="topics" class="topics">
    <% @topics.each do |topic| %>
    <option value="<%= topic.id %>"><%= topic.name %></option>
    <% end %>
  </select>
  <button type="submit" class="search_submit">Lean</button>
</form>

<div class="user_search_title">
  <h3><span id="term"></span> in <span id="topic"></span></h3>
</div>

<div class="buttons">
  <button class="bar" data-callback="chart">Bar Graph</button>
  <button class="articles" data-callback="results">Articles</button>
  <button class="history" data-callback="historical_chart">History</button>
</div>

<div class="load">
  <h3>Reading all these papers is hard work!</h3>
  <%= image_tag "newspaper.gif" %>
  <h3>It'll be just a moment...</h3>
</div>

<div id="chart"></div>

<div id="results"></div>

<div id="historical_chart"></div>
